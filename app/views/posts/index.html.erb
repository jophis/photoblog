<p id="notice"><%= notice %></p>

<h1> Photo Blog </h1>


    <% @posts.each do |post| %>
        <h2><%= link_to post.title, post %></h2>
        <div class= "photo-post">
        	<a href= "<%= post_url(post) %>"><%= image_tag(post.image.index_size.url, width:'100%') %></a>
        </div>
        <%= post.description %>
        <%= post.created_at.strftime("%d %b. %Y") %>
        <br>
        <hr>
    <% end %>

<br>


