

<% colors_array = ["post-blue", "post-yellow", "post-red"] %>
<% x = 0 %>
<% @posts.each do |post| %>
<% x = 0 %> <!-- remove -->
<div class= "<%=colors_array[x]%>">

    <div class= "date-box">
        <%= post.created_at.strftime("%d") %>
    </div>
    <div class= "post-title"><%=post.title%></div><br>
    <div class= "date-box">
        <%= post.created_at.strftime("%b") %>
    </div>
    <div class= "description">
        <%= post.description %>
    </div>
    <div class="divider"></div>
    <div class= "photo">
        <a href= "<%= post_url(post) %>"><%= image_tag(post.image, width:'100%')%>
    </div>
    <br>
    <br>
</div>

<% end %>
<%= paginate @posts %>
<br>


